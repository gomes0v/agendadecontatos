#:import Window kivy.core.window.Window

<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        FloatLayout:
            MDTopAppBar:
                pos_hint: {'center_x': 0.5, 'center_y': 0.97}
                elevation: 0
            MDLabel:
                text: 'Contatos'
                pos_hint: {"center_x": .17, "center_y": .96}
                halign: "center"
                theme_text_color: "Primary"
                font_size: dp(20)
                bold: True
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
            MDIconButton:
                id: edit_contact
                icon: 'playlist-edit'
                disabled: True
                pos_hint: {"center_x" : .93, "center_y" : .955}
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.transition.direction= 'left'
                    root.manager.current = 'edit_contact'

            MDIconButton:
                id: del_contact
                icon: 'delete'
                disabled: True
                pos_hint: {"center_x" : .78, "center_y" : .955}
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                on_release:
                    root.deleteContact()

            MDIconButton:
                id: view_contact
                icon: 'account-arrow-right'
                disabled: True
                pos_hint: {"center_x" : .63, "center_y" : .955}
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.transition.direction= 'left'
                    root.manager.current = 'display_contact'

            ScrollView:
                id: scroll_view
                do_scroll_x: False
                pos_hint: {'center_x': 0.5, 'center_y': 0.51}
                size_hint: 1, 0.8  
                MDList:
                    id: container
            MDFloatingActionButton:
                id: new_contact
                icon: 'plus'
                elevation: 0
                pos_hint: {"center_x" : 0.13, "center_y": 0.15}
                on_press:
                    root.manager.transition.direction= 'left'
                    root.manager.current = 'contact'
      
        
    
        